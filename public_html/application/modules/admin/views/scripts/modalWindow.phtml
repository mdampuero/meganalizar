            $.ajax({
                url: url,
                context: document.body
            }).done(function (data) {
                $("#modalBody").html(data);
            });
        } else {
            $('#myModalAjax #iframeModal').css('display', 'none');
        }
        if (footer == "true") {
            $('#myModalAjax #footerModal').css('display', 'block');
        } else {
            $('#myModalAjax #footerModal').css('display', 'none');
        }

        if (!width || width == undefined) {
