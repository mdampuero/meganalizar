    function closeModal() {
        $('#myModalAjax').modal('hide');
    }

    function openDialog(title, callback, disabledCancel, btnClass) {
        if (disabledCancel === undefined || disabledCancel === false) {
            $("#btnCancel").show();
        } else {
            $("#btnCancel").hide();
        }
        if (btnClass !== undefined) {
            $("#btnAccept").addClass(btnClass);
            $("#btnAccept").removeClass('btn-danger');
        } else {
            $("#btnAccept").addClass('btn-danger');
        }
        $('#modalDialog #dialogBody').html(title);
        callback = "closeDialog();" + callback;
        $('#modalDialog #btnAccept').attr("onclick", callback);
        $('#modalDialog').modal('show');

    }
    function closeDialog() {
        $('#modalDialog').modal('hide');
    }
</script>