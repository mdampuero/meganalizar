    function openModalScript(type, title, footer, url, width, height) {
        if (title == "") {
            $('#myModalAjax .modal-header').hide();
        } else {
            $('#myModalAjax .modal-header').show();
            $('#myModalAjax #titleModal').html(title);
        }
