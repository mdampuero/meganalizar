} else if (type == "ajax") {
    $('#myModalAjax #iframeModal').css('display', 'none');
    $("#modalBody").html("<div class='text-center' style='margin-top:50px;'><img src='<?php echo $this->baseUrl(); ?>/imgs/loading.gif'><br/>Cargando</div>");
